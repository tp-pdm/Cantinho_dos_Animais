<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal"
            android:padding="10dp">


                <ImageView
                    android:id="@+id/im_animal_photo"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:layout_marginTop="10dp"
                    tools:srcCompat="@tools:sample/avatars">
                </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_adoption_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Adoção Nº"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_adopter_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Adotante"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_animal_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_animal_raca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Raça"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tv_animal_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Idade"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>